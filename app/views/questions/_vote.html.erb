<% if question.voted_up_by?(current_user) %>
  <%= link_to "Undo Vote Up", question_vote_path(question, question.vote_for(current_user)), remote: true, method: :delete %>
  (<%= question.vote_sum %>)
  <%= link_to "Vote Down", question_vote_path(question, question.vote_for(current_user),{vote: {is_up: false}}), remote: true, method: :patch %>
<% elsif  question.voted_down_by?(current_user) %>
  <%= link_to "Vote up", question_vote_path(question, question.vote_for(current_user), {vote: {is_up: true}},), remote: true, method: :patch %>
  (<%= question.vote_sum %>)
  <%= link_to "Undo vote Down", question_vote_path(question, question.vote_for(current_user)), remote: true, method: :delete %>
<% else %>
  <%= link_to "Vote up", question_votes_path(question, vote: {is_up: true}), remote: true, method: :post %>
  <%= link_to "Vote down", question_votes_path(question, vote: {is_up: false}), remote: true, method: :post %>
<% end %>
